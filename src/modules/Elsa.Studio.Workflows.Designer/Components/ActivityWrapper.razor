<MudPaper
    Class="pa-3"
    Style="@($"border-left: solid 6px {_color}; filter: drop-shadow(0 4px 3px rgb(0 0 0 / 0.07)) drop-shadow(0 2px 2px rgb(0 0 0 / 0.06)); height: 100%;")"
    Outlined="true">
    <MudStack Row="true" AlignItems="AlignItems.Center">
        @if (_icon != null)
        {
            <MudIcon Icon="@_icon"></MudIcon>
        }
        @_label
    </MudStack>

</MudPaper>